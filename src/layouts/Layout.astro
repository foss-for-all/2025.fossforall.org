---
import "@/styles/global.scss";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import F4ALogo from "@/assets/favicon.svg";
import { WebsiteConfig } from "@/config";
const curentLocale = Astro.currentLocale || "ko";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={WebsiteConfig.metadata.faviconSrc} />
		<meta name="generator" content={Astro.generator} />
		<title>{WebsiteConfig.metadata.title}</title>
	</head>
	<body>
		<Header
			logoSvg={F4ALogo.src}
			menu={WebsiteConfig.navigation.menu(curentLocale)}
		/>
		<slot />
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
